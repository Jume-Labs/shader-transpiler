{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "Node16",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,

    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",

    /* Linting */
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vitest.config.ts"],
}
